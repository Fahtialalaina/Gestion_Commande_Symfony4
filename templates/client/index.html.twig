{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Index Client</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('client_new') }}">
                                <button type="button" class="btn btn-primary btn-sm">Cr√©er Client</button>
                            </a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

<div class="row">
    <div class="col-md-12">
        <div class="card">
        <div class="card-header">
            <h5 class="card-title"> Client</h5>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

            <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                    <td>{{ client.nom }}</td>
                                    <td>{{ client.adresse }}</td>
                                    <td>
                                    <a href="{{ path('client_show', {'id': client.id}) }}">
                                        <button type="button" class="btn btn-default btn-sm"><i class="far fa-eye"></i></button>
                                    </a>
                                    <a href="{{ path('client_edit', {'id': client.id}) }}">
                                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-pen"></i></button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}


