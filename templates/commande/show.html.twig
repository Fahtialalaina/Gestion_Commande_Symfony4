{% extends 'base.html.twig' %}

{% block title %}Commande | Gestion de Commande{% endblock %}

{% block entete %}
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
             <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Commande</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('commande_index') }}">Commande</a></li>
                                    <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('home') }}">Accueil</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
{% endblock %}

{% block body %}
    <h1>Détails de la Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°Commande</th>
                <td>{{ commande.numc }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ commande.client.nom }}</td>
            </tr>
            <tr>
                <th>Date de la Commande</th>
                <td>{{ commande.dateComm ? commande.dateComm|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-condensed">
                        <thead class="thead-dark">
                            <tr>
                                <th class="col-md-2">Désignation Article</th>
                                <th class="col-md-1">Quantité</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for t in lcomm %}
                            <tr>
                                <td class="col-md-1">{{ t.produit.libelle }}</td>
                                <td class="col-md-1">{{ t.qte }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
    <hr/>
    <button class="btn btn-success"><a href="{{ path('commande_edit', {'id': commande.id}) }}" style="color: #fff;">Modifier</a></button>
    <button class="btn" style="position: relative; margin-left: 5px; padding: 7px 15px;"><a href="{{ path('commande_index') }}" style="color: #343a40;">Retour</a></button>


    
{% endblock %}
